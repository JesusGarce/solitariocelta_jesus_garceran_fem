<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/barraEstado"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_status_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Row 0 -->
        <ImageView
            android:id="@+id/p03"
            style="@style/SCeltaRadioButton"
            android:layout_toStartOf="@+id/p14"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p02"
            style="@style/SCeltaRadioButton"
            android:layout_toLeftOf="@id/p03"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p04"
            style="@style/SCeltaRadioButton"
            android:layout_toRightOf="@id/p03"
            android:src="@drawable/orange_token" />

        <!-- Row 1 -->
        <ImageView
            android:id="@+id/p13"
            style="@style/SCeltaRadioButton"
            android:layout_below="@+id/p03"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p12"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p02"
            android:layout_toLeftOf="@id/p13"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p14"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p04"
            android:layout_toRightOf="@id/p13"
            android:src="@drawable/orange_token" />

        <!-- Row 2 -->
        <ImageView
            android:id="@+id/p23"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p13"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p22"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p12"
            android:layout_toLeftOf="@id/p23"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p21"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p12"
            android:layout_toLeftOf="@id/p22"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p20"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p12"
            android:layout_toLeftOf="@id/p21"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p24"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p14"
            android:layout_toRightOf="@id/p23"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p25"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p14"
            android:layout_toRightOf="@id/p24"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p26"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p14"
            android:layout_toRightOf="@id/p25"
            android:src="@drawable/orange_token" />

        <!-- Row 3 -->
        <ImageView
            android:id="@+id/p33"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p23"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p32"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p22"
            android:layout_toLeftOf="@id/p33"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p31"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p22"
            android:layout_toLeftOf="@id/p32"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p30"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p22"
            android:layout_toLeftOf="@id/p31"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p34"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p24"
            android:layout_toRightOf="@id/p33"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p35"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p24"
            android:layout_toRightOf="@id/p34"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p36"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p24"
            android:layout_toRightOf="@id/p35"
            android:src="@drawable/orange_token" />

        <!-- Row 4 -->
        <ImageView
            android:id="@+id/p43"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p33"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p42"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p32"
            android:layout_toLeftOf="@id/p43"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p41"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p32"
            android:layout_toLeftOf="@id/p42"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p40"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p32"
            android:layout_toLeftOf="@id/p41"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p44"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p34"
            android:layout_toRightOf="@id/p43"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p45"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p34"
            android:layout_toRightOf="@id/p44"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p46"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p34"
            android:layout_toRightOf="@id/p45"
            android:src="@drawable/orange_token" />

        <!-- Row 5 -->
        <ImageView
            android:id="@+id/p53"
            style="@style/SCeltaRadioButton"
            android:layout_below="@+id/p43"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p52"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p42"
            android:layout_toLeftOf="@id/p53"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p54"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p44"
            android:layout_toRightOf="@id/p53"
            android:src="@drawable/orange_token" />

        <!-- Row 6 -->
        <ImageView
            android:id="@+id/p63"
            style="@style/SCeltaRadioButton"
            android:layout_below="@+id/p53"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p62"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p52"
            android:layout_toLeftOf="@id/p63"
            android:checked="false"
            android:src="@drawable/orange_token" />

        <ImageView
            android:id="@+id/p64"
            style="@style/SCeltaRadioButton"
            android:layout_below="@id/p54"
            android:layout_toRightOf="@id/p63"
            android:src="@drawable/orange_token" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/firstFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/firstImageFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_buton" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/firstImageFrame"
                android:layout_alignTop="@id/firstImageFrame"
                android:layout_alignRight="@id/firstImageFrame"
                android:layout_alignBottom="@id/firstImageFrame"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tiempo"
                    style="@style/OverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:text="@string/txtTiempo"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tiempoValor"
                    style="@style/OverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="21sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/secondImageFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange_button" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/secondImageFrame"
                android:layout_alignTop="@id/secondImageFrame"
                android:layout_alignRight="@id/secondImageFrame"
                android:layout_alignBottom="@id/secondImageFrame"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fichasRestantes"
                    style="@style/OverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:text="@string/txtFichasRestantes"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fichasRestantesValue"
                    style="@style/OverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:text=""
                    android:textSize="21sp" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>